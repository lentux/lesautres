{% extends 'LesAutresSiteBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ title }}</h1>
    {{ show.text|raw }}
    {% if show.events %}
        <h2>Prochaines dates</h2>
        <ul>
        {% for event in show.events %}
            {% for date in event.dates %}
                <li>{{ event.place }}, {{ date }}</li>
            {% endfor %}
        {% endfor %}
        </ul>
    {% endif %}
    <a href="{{ path('page', {'slug': show.page.slug}) }}">{{ show.page }}</a>
{% endblock %}
