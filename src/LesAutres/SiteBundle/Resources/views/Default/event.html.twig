<div class="frame">
    <div class="float_right" style="width:220px;">
        <p class="right">
            <span class="bold">{{ event.place }}</span><br/>
            {{ event.place.street }}<br/>
            {{ event.place.zipcode }} {{ event.place.city }}
        </p>
        <div class="googlemaps">
            <iframe seamless width="200" height="200" src="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=fr&amp;geocode=&amp;q={{ event.place.street|replace({' ': '%20'}) }},%20{{ event.place.zipcode }}%20{{ event.place.city|replace({' ': '%20'}) }},%20France&amp;ie=UTF8&amp;z=14&amp;t=m&amp;iwloc=near&amp;output=embed"></iframe>
        </div>
    </div>
    <div class="float_left" style="width:300px;">
        {% if event.title or event.description %}
            <p>
                {% if event.title %}<span class="bold">{{ event.title }}</span><br/>{% endif %}
                {{ event.description }}
            </p>
        {% endif %}
        <ul>
            {% for date in event.dates %}
                <li>{{ date }}</li>
            {% endfor %}
        </ul>
    </div>
    <div style="clear:both;"></div>
</div>