{% extends 'LesAutresSiteBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ title }}</h1>
    {{ include('LesAutresSiteBundle:Default:social.html.twig', {'url': app.request.scheme ~ '://' ~ app.request.httpHost ~ path('page', {'slug': page.slug})}) }}<br/>
    {{ page.text|raw }}
    {% if page.shows %}
        {% for show in page.shows %}
            {{ include('LesAutresSiteBundle:Default:show.html.twig', {'show': show}) }}
        {% endfor %}
    {% endif %}
{% endblock %}
